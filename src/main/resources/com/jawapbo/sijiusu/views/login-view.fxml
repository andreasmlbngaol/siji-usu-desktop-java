<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jawapbo.sijiusu.views.LoginController">
   <VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #D6C0B3;">
      <HBox alignment="CENTER" prefHeight="480.0" prefWidth="800.0" style="-fx-border-radius: 20;">
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
         <effect>
            <DropShadow height="50.0" radius="24.5" width="50.0" />
         </effect>
         <VBox alignment="CENTER_LEFT" prefWidth="400.0" spacing="32.0" style="-fx-background-color: #FFFFFF;">
            <padding>
               <Insets left="50.0" right="50.0" />
            </padding>
            <VBox alignment="CENTER" prefHeight="61.0" prefWidth="442.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <Label text="Selamat Datang" textFill="#493628">
                  <font>
                     <Font name="Segoe UI Bold" size="30.0" />
                  </font>
               </Label>
               <Label alignment="CENTER" contentDisplay="RIGHT" nodeOrientation="LEFT_TO_RIGHT" text="Silahkan masuk ke akun Anda" textAlignment="CENTER" textFill="#ab886d" wrapText="true">
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
                  <font>
                     <Font name="Segoe UI Bold" size="15.0" />
                  </font>
               </Label>
            </VBox>
            <VBox spacing="16.0">
               <VBox alignment="CENTER_LEFT">
                  <Label alignment="CENTER" contentDisplay="RIGHT" nodeOrientation="LEFT_TO_RIGHT" text="Identifier" textAlignment="CENTER" textFill="#493628" wrapText="true">
                     <font>
                        <Font name="Segoe UI" size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="identifierTextField" promptText="Masukkan email/NIM/NIP/NIDN anda" />
               </VBox>
               <VBox>
                  <Label alignment="CENTER" contentDisplay="RIGHT" nodeOrientation="LEFT_TO_RIGHT" text="Kata Sandi" textAlignment="CENTER" textFill="#493628" wrapText="true">
                     <font>
                        <Font name="Segoe UI" size="15.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordField" promptText="Masukkan password anda" />
               </VBox>
            </VBox>
            <VBox alignment="CENTER">
               <Button alignment="CENTER" mnemonicParsing="false" onAction="#onLogin" prefHeight="32.0" prefWidth="300.0" style="-fx-background-radius: 30; -fx-background-color: #493628;" text="Masuk" textAlignment="CENTER" textFill="WHITE">
                  <font>
                     <Font name="Segoe UI Black" size="15.0" />
                  </font>
               </Button>
            </VBox>
         </VBox>
         <ImageView fitHeight="480.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/gambarkanan.jpg" />
         </ImageView>
      </HBox>
   </VBox>
</AnchorPane>
