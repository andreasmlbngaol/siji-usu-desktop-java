                                                        <padding>
                                                            <Insets left="20.0" />
                                                        </padding>
                                                    </Label>
                                                    <Label text="Label" textAlignment="CENTER" textFill="WHITE" GridPane.columnIndex="1">
                                                        <font>
                                                            <Font name="Segoe UI Bold" size="15.0" />
                                                        </font>
                                                        <padding>
                                                            <Insets left="20.0" />
                                                        </padding>
                                                    </Label>
                                                    <Label text="Label" textAlignment="CENTER" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                                        <font>
                                                            <Font name="Segoe UI Bold" size="15.0" />
