                                                    <Label text="Bagian :" textAlignment="CENTER" textFill="WHITE">
                                                        <font>
                                                            <Font name="Segoe UI Bold" size="15.0" />
                                                        </font>
                                                        <padding>
                                                            <Insets left="20.0" />
                                                        </padding>
                                                    </Label>
                                                    <Label text="Ruang :" textAlignment="CENTER" textFill="WHITE" GridPane.rowIndex="1">
                                                        <font>
                                                            <Font name="Segoe UI Bold" size="15.0" />
                                                        </font>
                                                        <padding>
                                                            <Insets left="20.0" />
                                                        </padding>
                                                    </Label>
                                                    <Label text="Dosen :" textAlignment="CENTER" textFill="WHITE" GridPane.rowIndex="2">
                                                        <font>
                                                            <Font name="Segoe UI Bold" size="15.0" />
