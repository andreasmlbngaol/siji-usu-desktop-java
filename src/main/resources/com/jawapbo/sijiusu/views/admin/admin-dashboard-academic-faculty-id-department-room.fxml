                    </children>
                    <effect>
                        <DropShadow />
                    </effect>
                </HBox>
                <HBox fillHeight="false" prefHeight="65.0" prefWidth="1282.0">
                    <children>
                        <Button fx:id="dashboardButton" mnemonicParsing="false" onAction="#onBackDashboard" prefHeight="67.0" prefWidth="284.0" style="-fx-background-color: transparent;" text="← Back to Dashboard">
