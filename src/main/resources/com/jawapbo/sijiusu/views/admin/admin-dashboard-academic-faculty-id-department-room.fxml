                                    </VBox.margin>
                                    <effect>
                                        <DropShadow blurType="GAUSSIAN" />
                                    </effect>
                                    <children>
                                        <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="1141.0">
                                            <children>
                                                <Label prefHeight="115.0" prefWidth="1121.0" text="RUANGAN KELAS" textFill="WHITE">
                                                    <font>
                                                        <Font name="Segoe UI Bold" size="25.0" />
                                                    </font>
                                                </Label>
